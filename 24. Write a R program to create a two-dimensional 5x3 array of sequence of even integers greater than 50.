rows <- 5
cols <- 3
even_matrix <- matrix(nrow = rows, ncol = cols)
even_num <- 52

for (i in 1:rows) {
  for (j in 1:cols) {
    even_matrix[i, j] <- even_num
    even_num <- even_num + 2
  }
}
    
print("Even Matrix:")
print(even_matrix)

print(even_matrix)
#method 2 
a <- array(seq(from = 50, length.out = 15, by = 2), c(5, 3))
print("Content of the array:")
print("5Ã—3 array of sequence of even integers greater than 50:")
print(a)
